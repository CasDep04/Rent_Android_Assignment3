<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <!-- Location ID -->
    <TextView
        android:id="@+id/textViewLocationId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ID:"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/textViewLocationIdValue"
        app:layout_constraintHorizontal_chainStyle="packed" />

    <TextView
        android:id="@+id/textViewLocationIdValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/textViewLocationId"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Location Address -->
    <TextView
        android:id="@+id/textViewLocationAddress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Address:"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/textViewLocationId"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/textViewLocationAddressValue"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/textViewLocationAddressValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/textViewLocationId"
        app:layout_constraintStart_toEndOf="@id/textViewLocationAddress"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Location Price -->
    <TextView
        android:id="@+id/textViewLocationPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Price:"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/textViewLocationAddress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/textViewLocationPriceValue"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/textViewLocationPriceValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/textViewLocationAddress"
        app:layout_constraintStart_toEndOf="@id/textViewLocationPrice"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Host Name -->
    <TextView
        android:id="@+id/textViewHostName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Host:"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/textViewLocationPrice"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/textViewHostNameValue"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/textViewHostNameValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/textViewLocationPrice"
        app:layout_constraintStart_toEndOf="@id/textViewHostName"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>