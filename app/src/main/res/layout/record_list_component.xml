<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <!-- Record ID -->
    <TextView
        android:id="@+id/textViewRecordId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Record ID:"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/textViewRecordIdValue"
        app:layout_constraintHorizontal_chainStyle="packed" />

    <TextView
        android:id="@+id/textViewRecordIdValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/textViewRecordId"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Guest Name -->
    <TextView
        android:id="@+id/textViewGuestName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Guest:"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/textViewRecordId"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/textViewGuestNameValue"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/textViewGuestNameValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/textViewRecordId"
        app:layout_constraintStart_toEndOf="@id/textViewGuestName"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Host Name -->
    <TextView
        android:id="@+id/textViewHostName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Host:"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/textViewGuestName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/textViewHostNameValue"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/textViewHostNameValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/textViewGuestName"
        app:layout_constraintStart_toEndOf="@id/textViewHostName"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Status -->
    <TextView
        android:id="@+id/textViewStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Status:"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/textViewHostName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/textViewStatusValue"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/textViewStatusValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/textViewHostName"
        app:layout_constraintStart_toEndOf="@id/textViewStatus"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
